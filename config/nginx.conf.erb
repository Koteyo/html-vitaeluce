daemon off;

events {
    worker_connections 1024;
}

http {
    include mime.types;
    default_type application/octet-stream;
    server {
        listen <%= ENV["PORT"] %>;
        server_name localhost;

        location / {
            root /app;
            index index.html;
            try_files $uri $uri/ =404;
        }
    }
}
